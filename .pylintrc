[MASTER]
ignore=tests
ignore-patterns=^\.#,.*\.pyi
jobs=0
load-plugins=
py-version=3.10

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    consider-using-from-import

[REPORTS]
score=no

[FORMAT]
max-line-length=79
indent-string='    '

[DESIGN]
max-args=10
max-attributes=15
max-branches=15
max-locals=25
max-returns=6
max-statements=75

[TYPECHECK]
ignored-classes=contextlib.ExitStack
ignored-modules=

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[LOGGING]
logging-format-style=old

[VARIABLES]
allow-global-unused-variables=no

[STRING]
check-str-concat-over-line-jumps=yes
